<footer class="relative flex flex-col w-full py-10 text-lg sm:flex-row sm:justify-center bg-white">
  <div class="px-8 py-4 text-center">
    <ul class="list-none">
      <li>
        <a class="no-underline hover:text-customRed" href="/about-us">About Us</a>
      </li>
    </ul>
  </div>
  <div class="w-1/2 h-px mx-auto bg-customRed sm:h-auto sm:w-px sm:mx-0"></div>
  <div class="py-4 pl-0 text-center sm:pl-8">
    <ul class="list-none">
      {% for item in site.social %}
      <li>
        <a class="no-underline hover:text-customRed" href="{{ item.url }}" target="_blank" rel="noopener noreferrer nofollow">
          {{ item.title }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</footer>
<div class="w-full bg-black text-white py-5">
  <div class="w-full m-auto grid md:w-4/5 xl:w-3/4 md:grid-cols-2 px-4 md:px-0">
    <div class="text-center mb-4 md:mb-0 md:text-left md:w-3/4 xl:w-full">
      <p class="inline-block text-sm font-light">
        {{ site.author }} is a registered 501(c)(3) not-for-profit organization.
      </p>
    </div>
    <div class="text-center md:text-right w-full">
      <p class="inline-block text-sm font-light">
        Copyright &copy; {{ site.author }}, <span x-data x-text="new Date().getFullYear()"></span>
      </p>
    </div>
  </div>
</div>