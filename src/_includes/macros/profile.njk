{% macro card(name, subtitle, description) %}
    <div class="profile-card relative max-w-md mx-auto md:max-w-2xl min-w-0 break-words bg-white w-full shadow-lg rounded-xl mt-40 md:mt-16 md:mb-6">
        <div class="px-6 h-full">
            <div class="flex flex-wrap justify-center">
                <div class="w-full flex justify-center">
                    <div class="relative">
                        {{ caller() }}
                    </div>
                </div>
            </div>
            <div class="text-center mt-24">
                <h3 class="text-2xl text-slate-700 font-bold leading-normal mb-1">{{ name }}</h3>
                <div class="text-xs mt-0 mb-2 text-gray-400 font-bold uppercase">
                    {{ subtitle }}
                </div>
            </div>
            <div class="mt-6 py-6 borderline border-t-4 text-center mt-6 py-6 text-center flex flex-wrap" style="height: calc(100% - 200px);">
                <div class="w-full px-4">
                    <p class="font-light leading-relaxed text-slate-600 mb-4">{{ description | safe }}</p>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}