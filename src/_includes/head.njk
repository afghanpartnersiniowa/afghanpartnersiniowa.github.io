{%- set absolutePageUrl -%}{{ page.url | url | absoluteUrl(env.url) }}{%- endset -%}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preload" href="/css/page.css" as="style">
<link rel="preload" href="/font/SourceSerifPro-Bold.woff2" as="font" crossorigin>
<link rel="preload" href="/font/SourceSansPro-Regular.woff2" as="font" crossorigin>
<link rel="preload" href="/font/SourceSansPro-Bold.woff2" as="font" crossorigin>
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ pageTitle or title }} - {{ site.title }}</title>
<meta name="description" content="{{ description or site.description }}">
<meta name="author" content="{{ site.author }}">
<meta name="robots" content="{{ 'noindex' if env.isPreview else 'index,follow' }}">
<!-- Social Metadata -->
<meta property="og:locale" content="{{ site.language }}">
<meta property="og:site_name" content="{{ site.author }}">
<meta property="og:title" content="{{ title or site.title }} - {{ site.title }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:image" itemprop="image primaryImageOfPage" content="{{ site.image | url | absoluteUrl(env.url) }}">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="512" />
<meta property="og:image:height" content="512" />
<meta property="og:image:alt" content="The Afghan Partners in Iowa logo. The American and Afghanistan flags.">
<meta name="twitter:card" content="summary">
<meta name="twitter:domain" content="www.afghanpartnersiniowa.org">
<meta name="twitter:title" property="og:title" itemprop="name" content="{{ title or site.title }} - {{ site.title }}">
<meta name="twitter:description" property="og:description" itemprop="description" content="{{ description or site.description }}">
<meta name="theme-color" content="#ffffff">

<!-- Icons -->
<link rel="shortcut icon" type="image/x-icon" href="{{ site.favicon }}">
<link rel="icon" type="image/png" sizes="16x16" href="/img/favicon-16x16.png">
<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="48x48" href="/img/favicon-48x48.png">
<link rel="icon" type="image/png" sizes="192x192"  href="/img/android-chrome-192x192.png">
<link rel="icon" type="image/png" sizes="512x512"  href="/img/android-chrome-512x512.png">
<link rel="apple-touch-icon" sizes="180x180" href="/img/apple-touch-icon.png">
<link rel="image_src" href="{{ site.image }}">

<link rel="stylesheet" href="/css/page.css">
<script defer src="/js/alpine.js"></script>
