head: >
  <link rel="preconnect" href="https://www.google.com">
  <link rel="preconnect" href="https://www.gstatic.com" crossorigin>
---

{% import "./_includes/content/forms.njk" as forms %}

{% call forms.form(
  'help-form',
  'https://d22ee0itwuuo5o.cloudfront.net/contact?form=Afghan%20Partners%20in%20Iowa%20-%20Offer%20to%20Help',
  '{
    form: {
      first: { value: "", validate: (form) => form.first.value.length === 0 },
      last:  { value: "", validate: (form) => form.last.value.length === 0 },
      email: { value: "", validate: (form) => form.phone.value.length === 0 && form.email.value.length === 0 },
      phone: { value: "", validate: (form) => form.phone.value === 0 && form.email.value.length === 0 },
      help:  { value: [], validate: (form) => form.help.value.length === 0 },
      errors: false,
      submitCount: 0
    }
  }'
) %}
  {{ forms.field(
    'First (given) name',
    name='first-name',
    model='form.first',
    labelClass='required',
    errorText='Please enter your first name'
  ) }}

  {{ forms.field(
    'Last (family) name',
    name='last-name',
    model='form.last',
    labelClass='required',
    errorText='Please enter your last name'
  ) }}

  {{ forms.field(
    'Email address',
    name='email-address',
    model='form.email',
    errorText='Please provide either your Email Address or Phone Number'
  ) }}

  {{ forms.field(
    'Phone number',
    name='phone-number',
    model='form.phone',
    placeholder='515-123-1234',
    errorText='Please provide either your Email Address or Phone Number'
  ) }}

  {{ forms.fieldset(
    'What would you like to help with?',
    [
      'Interpretation',
      'Employment',
      'School/ESL',
      'Healthcare',
      'Housing',
      'Car insurance',
      'Immigration issues',
      'Applications',
      'Safety issues',
      'Transportation',
      'Childcare',
      'Reading and responding to mail',
      'Banking and finance',
      'Taxes/IRS',
      'Learning circle'
    ],
    legendClass='required',
    name='help-with',
    model='form.help',
    errorText='Please select at least one thing to help with'
  ) }}

  {{ forms.recaptchaDisclaimer() }}
  <button class="submit-form"
          type="button"
          @click="form.submitCount += 1"
  >Send</button>
{% endcall %}

{{ forms.recaptchaScript(env.recaptchaSiteKey, 'help-form') }}
